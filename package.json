{
  "name": "omm",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:landing": "turbo dev --filter=@omm/landing",
    "dev:shop": "turbo dev --filter=@omm/shop",
    "dev:admin": "turbo dev --filter=@omm/admin",
    "build": "turbo build",
    "lint": "turbo lint",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5"
  }
}
